{
  "include": ["src"],
  "compilerOptions": {
    "module": "ES2022",
    "lib": ["dom", "esnext"],
    "target": "ES2022",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react"
  }
}
